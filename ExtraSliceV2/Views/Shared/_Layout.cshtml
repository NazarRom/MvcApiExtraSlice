<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExtraSliceV2</title>
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/LogoExtraSlice.png")">
    <link rel="stylesheet" href="~/css/carrouselCss.css" />
    <link rel="stylesheet" href="~/css/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/css/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
    <link rel="stylesheet" href="~/css/CarritoCss.css" />
    <link rel="stylesheet" href="~/css/PerfilUserCss.css" />
    @RenderSection("Style", false)
</head>
<body>
    <header>
        <nav>
            <div class="navbar">

                <div class="logo">
                    <a asp-controller="Carta" asp-action="Index"><img src="~/LogoExtraSlice.png" /></a>
                </div>

                <div>
                    <a asp-controller="Carta" asp-action="Favoritos"><img src="~/images/estrella.png" /></a>
                </div>

                <div class="cart-container">
                    <div class="cart"><a asp-controller="Carta" asp-action="CarritoProductos"><img src="~/images/carro-de-la-carretilla.png" /></a></div>
                </div>


                <div class="logIn">
                    <partial name="_MenuUsuario" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 30px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @*<div class="container">
            &copy; 2023 - ExtraSliceV2 
        </div>*@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sweetalert2.all.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
